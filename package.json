{
  "name": "full-stack-template",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack + AI project template with monorepo architecture",
  "workspaces": [
    "frontend",
    "shared",
    "packages/*"
  ],
  "scripts": {
    "generate:types": "./scripts/generate-types.sh",
    "test:api": "cypress run --config-file test/cypress.config.ts --spec 'cypress/e2e/api/**/*.cy.ts'",
    "lint:contracts": "cd shared && npm run lint --workspace=shared",
    "format:contracts": "cd shared && npm run format --workspace=shared",
    "prepare": "if command -v husky >/dev/null 2>&1; then husky; else echo 'Skipping Husky install (husky binary not available)'; fi"
  },
  "devDependencies": {
    "chalk": "^5.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "backend/**/!(migrations)/**/*.{ts,tsx,js,jsx}": [
      "make -C backend pre-commit"
    ],
    "backend/*.{ts,tsx,js,jsx}": [
      "make -C backend pre-commit"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "make -C frontend pre-commit"
    ],
    "ai-service/**/*.py": [
      "make -C ai-service pre-commit"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
